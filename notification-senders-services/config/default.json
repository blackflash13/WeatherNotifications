{
    "app": {
        "name": "notification-senders-service",
        "port": 3002
    },
    "rabbitmq": {
        "url": "amqp://user:password@rabbitmq:5672",
        "exchange": "weather_notifications"
    },
    "smtp": {
        "service": "gmail",
        "host": "smtp.gmail.com",
        "port": 587,
        "secure": false,
        "senderName": "Weather Notification",
        "rateLimitMs": 500,
        "auth": {
            "user": "${SMTP_USER}",
            "pass": "${SMTP_PASS}"
        }
    },
    "notifications": {
        "daily": {
            "email": {
                "queueName": "email_notifications_daily",
                "routingKey": "weather.email.daily",
                "prefetch": 5
            },
            "telegram": {
                "queueName": "telegram_notifications_daily",
                "routingKey": "weather.telegram.daily",
                "prefetch": 25
            },
            "whatsapp": {
                "queueName": "whatsapp_notifications_daily",
                "routingKey": "weather.whatsapp.daily",
                "prefetch": 15
            }
        },
        "hourly": {
            "email": {
                "queueName": "email_notifications_hourly",
                "routingKey": "weather.email.hourly",
                "prefetch": 10
            },
            "telegram": {
                "queueName": "telegram_notifications_hourly",
                "routingKey": "weather.telegram.hourly",
                "prefetch": 50
            },
            "whatsapp": {
                "queueName": "whatsapp_notifications_hourly",
                "routingKey": "weather.whatsapp.hourly",
                "prefetch": 30
            }
        }
    }
}
